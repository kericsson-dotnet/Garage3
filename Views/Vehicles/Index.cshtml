@model IEnumerable<Garage.Models.Vehicle>

<h1>Vehicles</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table border="1" cellspacing="0" cellpadding="5">
    <thead style="background-color: #f2f2f2;">
        <tr>
            <th style="padding: 10px;">Owner</th> 
            <th style="padding: 10px;">Reg Number</th>
            <th style="padding: 10px;">Brand</th>
            <th style="padding: 10px;">Model</th>
            <th style="padding: 10px;">Color</th>
            <th style="padding: 10px;">Number of Wheels</th>
            <th style="padding: 10px;">Vehicle Type</th> 
        </tr>
    </thead>
    <tbody>
    @foreach (var vehicle in Model)
    {
        <tr>
                <td style="padding: 10px;">@vehicle.Owner.FirstName @vehicle.Owner.LastName</td>
                <td style="padding: 10px;">@vehicle.RegNumber</td>
                <td style="padding: 10px;">@vehicle.Brand</td>
                <td style="padding: 10px;">@vehicle.Model</td>
                <td style="padding: 10px;">@vehicle.Color</td>
                <td style="padding: 10px;">@vehicle.NumberOfWheels</td>
                <td style="padding: 10px;">@vehicle.VehicleType.TypeName</td>
            
        </tr>
    }
    </tbody>
</table>
