@model Garage.Models.User

<h1>User Details</h1>

<div>
    <h4>User Id: @Model.UserId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Personal Number</dt>
        <dd class="col-sm-10">@Model.PersonalNumber</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>


        <dt class="col-sm-2">Vehicles</dt>
        @foreach (var vehicle in Model.Vehicles)
        {
          <dd style="padding: 10px;">@vehicle.RegNumber</dd>
        }
    </dl>
</div>

